
<h1>Wiadomosci</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
 <% i=0%>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= i=1+i %></td>
        <%if message.read%>
          <td><%= message.subject %></td>
        <%else%>
          <td><strong><%=message.subject%></strong></td>
        <%end%>
        <td><%= link_to 'Otworz', message_path(:id => message.id) %></td>
        <td><%= link_to 'UsuÅ„', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br></br>
