<h1>Grupy</h1>
<%= render 'form'%>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.order(:created_at).each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'napisz do wszystkich w grupie', new_message_path(:idg => group.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
