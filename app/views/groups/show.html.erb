<%= form_for :clas, :url => classes_update_path, :html => { :method => :put } do %>
  <table>
    <tr>
      <th>Nr zajec</th>
      <th>Start</th>
      <th>Koniec</th>
    </tr>
    <% @classes.each do |clas| %>
     <%= fields_for "clas[]", clas do |clas_fields| %>
     <tr>
       <td><%= clas.classes_number %></td>
       <td><%= clas_fields.datetime_local_field :start %> </td>
       <td><%= clas_fields.datetime_local_field :end %></td>
     </tr>
     <%end%>
    <%end%>
  </table>
  <div class="actions">
    <%= submit_tag %>
  </div>
<%end%>
<%=render 'new_student' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>album_number</th>
      <th>Email</th>
      <th>obecnosc</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <%= form_for :presence, :url => presences_update_path, :html => { :method => :put } do %>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.lastname %></td>
        <td><%= student.album_number %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'napisz', new_message_path(:iid => student.id) %></td>
      <td>
          <% @presence = Presence.where(student_id: student.id) %>
          
              <% @presence.each do |presence| %>
                <%= fields_for "presence[]", presence do |presence_fields| %>
                  <%= presence_fields.check_box :present %>
                <%end%>
              <%end%>
      </td>
      </tr>
    <% end %>
              <div class="actions">
            <%= submit_tag %>
          </div>
  </tbody>
  </table>
  <% end %>
