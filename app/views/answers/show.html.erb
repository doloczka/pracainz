
<p>
  <strong>Treść:</strong>
  <%= @exercise.content %>
</p>
<p>Nagroda: <%=@exercise.reward%></p>
<p>
  <strong>Rozwiązanie:</strong>
  <%= @answer.solution %>
</p>
<% if !@answer.read%>
<%= form_for @result, url: new_result_path do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>
      <ul>
      <% @result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.label :earned_points, "Przyznaj punkty"%>
<%= f.number_field "earned_points", in: 0...101%>
<%= f.hidden_field :student_id, :value => @answer.student_id %>
<%= f.hidden_field :level, :value => @exercise.level %>
<%= f.hidden_field :exercise_id, :value => @exercise.id %>
<% @medals = Medal.where(value: 6)%>
<%= select_tag 'medal_id', options_for_select(@medals.collect{ |u| [u.name, u.id] }), :prompt => "zasłużył na medal?"%>
    <div class="actions">
    <%= f.submit "Oceń"%>
  </div
<% end %>
<% end %>