<h1>Przysłane rozwiązania</h1>
<h3>Nie ocenione</h3>
<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Lekcja</th>
      <th>Ćwiczenie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <%@exercise = Exercise.find(answer.exercise_id)%>
        <td><%= answer.student.name %> <%= answer.student.lastname %></td>
        <td><%= @exercise.level %></td> 
        <td><%= @exercise.number %></td>
        <td><%= link_to 'Show', answer %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h3>Ocenione</h3>
<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Ocena</th>
      <th>Lekcja</th>
      <th>Ćwiczenie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @read_answers.each do |answer| %>
      <tr>
        <%@exercise = Exercise.find(answer.exercise_id)%>
        <%@result = Result.find_by(exercise_id: @exercise.id)%>
        <td><%= answer.student.name %> <%= answer.student.lastname %></td>
       <td><%= @result.earned_points%></td>
        <td><%= @exercise.level %></td> 
        <td><%= @exercise.number %></td>

        <td><%= link_to 'Show', answer %></td>
      </tr>
    <% end %>
  </tbody>
</table>


