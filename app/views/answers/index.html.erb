<div class="row">
  <div class="col-lg-9 col-lg-offset-1">
    <center><h1>Rozwiązania</h1></center>
    <div>
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#nieocenione" aria-controls="home" role="tab" data-toggle="tab">Nie ocenione <%=Answer.where(teacher_id: session[:user_id], read: false).where.not(solution: nil).count %></a></li>
        <li role="presentation"><a href="#ocenione" aria-controls="profile" role="tab" data-toggle="tab">Ocenione</a></li>
      </ul>
      <div class="tab-content">
        <!--nieocenione-->
        <div role="tabpanel" class="tab-pane fade in active" id="nieocenione">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Student</th>
                <th>Grupa</th>
                <th>Lekcja</th>
                <th>Ćwiczenie</th>
                <th>Godzina przysłania</th>
                <th colspan="2"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @answers.each do |answer| %>
                <tr>
                  <%@exercise = Exercise.find(answer.exercise_id)%>
                  <td><%= answer.student.name %> <%= answer.student.lastname %></td>
                  <td><%= answer.student.group.name %></td>
                  <td><%= @exercise.level %></td> 
                  <td><%= @exercise.number %></td>
                  <td><%= answer.updated_at.in_time_zone("Warsaw").strftime("%Y-%m-%d %H:%M:%S")%></td>
                  <td><%= link_to 'Pokaż', answer , :class =>"btn btn-primary"%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        <!--ocenione-->
        <div role="tabpanel" class="tab-pane fade in active" id="ocenione">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Student</th>
                <th>Grupa</th>
                <th>Ocena</th>
                <th>Lekcja</th>
                <th>Ćwiczenie</th>
                <th>Godzina przysłania</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @read_answers.each do |answer| %>
                <tr>
                  <%@exercise = Exercise.find(answer.exercise_id)%>
                  <%@result = Result.find_by(exercise_id: @exercise.id, student_id: answer.student.id)%>
                  <td><%= answer.student.name %> <%= answer.student.lastname %></td>
                  <td><%= answer.student.group.name %></td>
                  <td><%= @result.earned_points%></td>
                  <td><%= @exercise.level %></td> 
                  <td><%= @exercise.number %></td>
                  <td><%= answer.updated_at.in_time_zone("Warsaw").strftime("%Y-%m-%d %H:%M:%S")%></td>
                  <td><%= link_to 'Pokaż', answer , :class =>"btn btn-primary"%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>





