<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Exercise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <%@exercise = Exercise.find(answer.exercise_id)%>
        <td><%= answer.student.name %> <%= answer.student.lastname %></td>
        <td>Lekcja :<%= @exercise.level %> Ä†wiczenie <%= @exercise.number %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

